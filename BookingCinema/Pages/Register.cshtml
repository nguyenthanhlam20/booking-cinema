@page
@model RegisterModel

<!DOCTYPE html>
<html>
<head>
    <title>Registration Form</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<body>
    <div class="center">
        <div class="main">
            <div class="login">
                <form method="post">
                    <label aria-hidden="true">Sign up</label>
                    <div class="form-group">
                        <input asp-for="UserModel!.Username" placeholder="Username" class="form-control input2" />
                        <span asp-validation-for="UserModel!.Username" class="text-dark"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserModel!.FullName" placeholder="Full Name" class="form-control input2" />
                        <span asp-validation-for="UserModel!.FullName" class="text-dark"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserModel!.Email" placeholder="Email" class="form-control input2" required />
                        <span asp-validation-for="UserModel!.Email" class="text-dark"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserModel!.Password" type="password" placeholder="Password" class="form-control input2" required />
                        <span asp-validation-for="UserModel!.Password" class="text-dark"></span>
                    </div>
                    <button class="button2" type="submit">Sign up</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
