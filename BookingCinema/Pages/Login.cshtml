@page
@model BookingCinema.Pages.LoginModel

<!DOCTYPE html>
<html>
<head>
    <title>Login Form</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<body>
 
    <div id="notification-container">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success" role="alert">
                @Html.Raw(@Model.Message)
            </div>
        }
    </div>
    <div class="center">
        <div class="main">
            <div class="login">
                @if (Model.ModelState.ContainsKey("LoginError"))
                {
                    <div class="alert alert-danger" role="alert">
                        @Html.Raw(Model.ModelState["LoginError"].Errors[0].ErrorMessage)
                    </div>
                }
                <form method="post">
                    <label aria-hidden="true">Login</label>
                    <div class="form-group">
                        <input asp-for="UserModel!.Email" placeholder="Email" class="form-control input2" />
                        <span asp-validation-for="UserModel!.Email" class="text-dark"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserModel!.Password" type="password" placeholder="Password" class="form-control input2" />
                        <span asp-validation-for="UserModel!.Password" class="text-dark"></span>
                    </div>
                    <button class="button2" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
