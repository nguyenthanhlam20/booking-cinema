@page
@model BookingCinema.Pages.Admin.ShowTimes.DeleteModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Showtime?</h3>
<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.ShowDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.ShowDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.Theater)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Theater.TheaterName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Showtime.ShowtimeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
   
</div>
