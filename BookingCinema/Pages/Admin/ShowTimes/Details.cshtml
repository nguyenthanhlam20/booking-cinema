@page
@model BookingCinema.Pages.Admin.ShowTimes.DetailsModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Details";
}

<h3>Showtime Details</h3>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.ShowDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.ShowDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime.Theater)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Theater.TheaterName)
        </dd>
    </dl>
    <div>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Showtime.ShowtimeId">Edit</a> |
        <a class="btn btn-danger" asp-page="./Index">Back to List</a>
    </div>
</div>

