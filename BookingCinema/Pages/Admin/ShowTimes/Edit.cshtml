@page
@model BookingCinema.Pages.Admin.ShowTimes.EditModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Edit";
}

<h3>Edit Showtime</h3>

<div class="card p-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Showtime.ShowtimeId" />
        <div class="form-group">
            <label asp-for="Showtime.MovieId" class="control-label"></label>
            <select asp-for="Showtime.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
            <span asp-validation-for="Showtime.MovieId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Showtime.TheaterId" class="control-label"></label>
            <select asp-for="Showtime.TheaterId" class="form-control" asp-items="ViewBag.TheaterId"></select>
            <span asp-validation-for="Showtime.TheaterId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Showtime.ShowDateTime" class="control-label"></label>
            <input asp-for="Showtime.ShowDateTime" class="form-control" />
            <span asp-validation-for="Showtime.ShowDateTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-danger" asp-page="./Index">Back to List</a>
            | 
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
