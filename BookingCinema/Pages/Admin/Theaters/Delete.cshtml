@page
@model BookingCinema.Pages.Admin.Theaters.DeleteModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Theater?</h3>
<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theater.TheaterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theater.TheaterName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Theater.TheaterId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>
