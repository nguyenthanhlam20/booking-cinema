@page
@model BookingCinema.Pages.Admin.Seats.UpdateModel
@{
}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Edit Seat</h1>

<div class="card p-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Seat!.SeatId" />
        <div class="form-group">
            <label asp-for="Seat!.TheaterId" class="control-label"></label>
            <select asp-for="Seat!.TheaterId" class="form-control" asp-items="Model.Theaters"></select>
            <span asp-validation-for="Seat!.TheaterId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Seat!.NRow" class="control-label"></label>
            <input asp-for="Seat!.NRow" class="form-control" />
            <span asp-validation-for="Seat!.NRow" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Seat!.NColumn" class="control-label"></label>
            <input asp-for="Seat!.NColumn" class="form-control" />
            <span asp-validation-for="Seat!.NColumn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Seat!.Price" class="control-label"></label>
            <input asp-for="Seat!.Price" class="form-control" />
            <span asp-validation-for="Seat!.Price" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Seat!.IsBooked" /> @Html.DisplayNameFor(model => model.Seat!.IsBooked)
            </label>
        </div>
        <div class="form-group">
            <a class="btn btn-danger" asp-page="/Admin/Seats/Index">Back to List</a>

            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
