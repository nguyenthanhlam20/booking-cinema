@page
@model BookingCinema.Pages.Admin.Seats.IndexModel
@{
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between">
    <h1>List Seat</h1>

    <p>
        <a class="btn btn-primary" asp-page="/Admin/Seats/Create">Create New</a>
    </p>
</div>
<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Seats[0].NRow)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats[0].NColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats[0].IsBooked)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats[0].Theater)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Seats)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NRow)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NColumn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsBooked)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Theater!.TheaterName)
                    </td>
                    <td>
                        <a asp-page="/Admin/Seats/Update" class="btn btn-success" asp-route-id="@item.SeatId">Edit</a> |
                        <a asp-page="/Admin/Seats/Details" class="btn btn-primary" asp-route-id="@item.SeatId">Details</a> |
                        <a asp-page="/Admin/Seats/Delete" class="btn btn-danger" asp-route-id="@item.SeatId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>