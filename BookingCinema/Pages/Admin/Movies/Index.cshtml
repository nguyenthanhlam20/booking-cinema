@page
@model BookingCinema.Pages.Admin.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

}

<div class="d-flex justify-content-between align-items-center">
    <h1>List Movie</h1>

    <p>
        <a class="btn btn-primary" asp-page="/Admin/Movies/Create">Create New</a>
    </p>
</div>
<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Img)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Img)
                    </td>
                    <td>
                        <div class="btn d-flex flex-column">
                            <a asp-page="/Admin/Movies/Update" class="btn btn-success mt-2" asp-route-id="@item.MovieId">Edit</a>
                            <a asp-page="/Admin/Movies/Details" class="btn btn-primary mt-2" asp-route-id="@item.MovieId">Details</a>
                            <a asp-page="/Admin/Movies/Delete" class="btn btn-danger mt-2" asp-route-id="@item.MovieId">Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>